{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}

    <h1>{{ 'title_user_edit'|trans({'%id%': user.id|default('')}) }}</h1>
        {% if is_granted('ROLE_ADMIN') %}
            {{ form_start(form, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
            {{ form_widget(form) }}
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'action_save'|trans }}" id="view_button" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('user_index') }}" id="view_button">
                    {{ 'action_back_to_list'|trans }}
                </a>
            </div>
            {{ form_end(form) }}

         {% else %}
             {{ form_start(form, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
             {{ form_widget(form) }}
             <div class="form-group row float-sm-right">
                 <input type="submit" value="{{ 'action_save'|trans }}" id="view_button" />
             </div>
             <div class="form-group row float-sm-left">
                 <a href="{{ url('task_index') }}" id="view_button">
                     {{ 'action_back_to_list'|trans }}
                 </a>
             </div>
             {{ form_end(form) }}
    {% endif %}

{% endblock %}


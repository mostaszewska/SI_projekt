{% block title %}
    {{ 'title_tag_details'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_tag_details'|trans({'%id%': tag.id|default('')}) }}</h1>
    {% if tag is defined and tag|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ tag.id }}</dd>
            <dt>{{ 'label_date'|trans }}</dt>
            <dd>{{ tag.date|format_date('long') }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ tag.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('tag_index') }}" title="{{ 'action_back_to_list'|trans }}" id="view_button">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}